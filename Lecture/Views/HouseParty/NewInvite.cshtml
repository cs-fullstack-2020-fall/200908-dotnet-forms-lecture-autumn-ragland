@model Lecture.Models.Invite
<h1>Add New Invite</h1>
@using (@Html.BeginForm("AddInvite", "HouseParty"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.inviteName)
        @Html.TextBoxFor(m => m.inviteName, new { @class="form-control" })
    </div>
    <div class="form-check form-check-inline">
        @Html.CheckBoxFor(m => m.isAttending, new { @class="form-check-input" })
        @Html.LabelFor(m => m.isAttending, new { @class="form-check-label" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.numberAttended)
        @Html.TextBoxFor(m => m.numberAttended, new { @class="form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.age)
        @Html.TextBoxFor(m => m.age, new { @class="form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
}